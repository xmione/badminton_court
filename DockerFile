# Dockerfile
FROM python:3.12

ENV PYTHONDONTWRITEBYTECODE 1
ENV PYTHONUNBUFFERED 1
ENV DOCKER=true

WORKDIR /app

# Install system dependencies
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        postgresql-client \
        build-essential \
    && rm -rf /var/lib/apt/lists/*

# Create a non-root user first
RUN adduser --disabled-password --gecos '' appuser
RUN chown -R appuser:appuser /app
USER appuser

# Copy and install Python dependencies as the non-root user
COPY requirements.txt /app/
RUN pip install --user -r requirements.txt --timeout 1000 --retries 5

# Add user's local bin to PATH so installed packages are available
ENV PATH=/home/appuser/.local/bin:$PATH

# Explicitly install python-dotenv as the non-root user
RUN pip install --user python-dotenv==1.1.1

# Then clean up (smaller image)
RUN rm -rf ~/.cache/pip

# Copy project
COPY --chown=appuser:appuser . /app/

# Expose port
EXPOSE 8000

# Default command
CMD ["python", "manage.py", "runserver", "0.0.0.0:8000"]